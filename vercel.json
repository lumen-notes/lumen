{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "devCommand": "vite dev --host --port $PORT",
  "rewrites": [
    { "source": "/cors-proxy/:path*", "destination": "/api/cors-proxy?path=:path" },
    { "source": "/file-proxy", "destination": "/api/file-proxy" },
    { "source": "/git-lfs-file", "destination": "/api/git-lfs-file" },
    { "source": "/github-auth", "destination": "/api/github-auth" },
    { "source": "/share/:path*", "destination": "/api/share/:path*" }
  ]
}
